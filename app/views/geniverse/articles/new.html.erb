<h1>New article</h1>

<%= form_for(@article, as: :article) do |f| %>
  <%= error_messages(@article) %>

  <p>
    <%= f.label :group %><br />
    <%= f.text_field :group %>
  </p>
  <p>
    <%= f.label :activity_id %><br />
    <%= f.text_field :activity_id %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :time %><br />
    <%= f.text_field :time %>
  </p>
  <p>
    <%= f.label :submitted %><br />
    <%= f.check_box :submitted %>
  </p>
  <p>
    <%= f.label :teacherComment %><br />
    <%= f.text_area :teacherComment %>
  </p>
  <p>
    <%= f.label :accepted %><br />
    <%= f.check_box :accepted %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', geniverse_articles_path %>
